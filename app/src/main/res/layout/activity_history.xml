<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".historyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_1st_name"
            style="@style/tv"
            android:text="NAME"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_1st_time"
            style="@style/tv"
            android:text="TIME"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_2nd_name"
            style="@style/tv"
            android:text="NAME"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_2nd_time"
            style="@style/tv"
            android:text="TIME"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_3rd_name"
            style="@style/tv"
            android:text="NAME"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_3rd_time"
            style="@style/tv"
            android:text="TIME"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>